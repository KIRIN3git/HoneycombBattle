<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kirin3.jp.honeycombbattle.main.MainActivity">




    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/layoutPlayer1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="●" />
            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="プレイヤー１" />

            <TextView
                android:gravity="center"
                android:height="40dp"
                android:id="@+id/textPlayerRank1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerScore1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerLife1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPlayer2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerColor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="●" />
            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="プレイヤー２" />

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerRank2"
                android:height="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerScore2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerLife2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPlayer3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerColor3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="●" />
            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="プレイヤー３" />

            <TextView
                android:gravity="center"
                android:height="40dp"
                android:id="@+id/textPlayerRank3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerScore3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerLife3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPlayer4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerColor4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="●" />
            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="プレイヤー４" />

            <TextView
                android:gravity="center"
                android:height="40dp"
                android:id="@+id/textPlayerRank4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerScore4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerLife4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>