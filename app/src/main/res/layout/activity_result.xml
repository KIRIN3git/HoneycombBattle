<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="kirin3.jp.honeycombbattle.main.MainActivity">

    <LinearLayout
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

           <LinearLayout
            android:id="@+id/layoutPlayer1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgRank1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="●" />

            <!--
            <TextView
                android:gravity="center"
                android:textSize="30sp"
                android:id="@+id/textPlayerName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="１P" />
            -->

            <TextView
                android:gravity="center"
                android:textSize="30sp"
                android:id="@+id/textPlayerScore1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

            <LinearLayout
            android:id="@+id/layoutPlayer2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgRank2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerColor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="●" />


            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerScore2"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

            <LinearLayout
            android:id="@+id/layoutPlayer3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgRank3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerColor3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="●" />

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerScore3"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

            <LinearLayout
            android:id="@+id/layoutPlayer4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgRank4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>


            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerColor4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="●" />

            <TextView
                android:gravity="center"
                android:id="@+id/textPlayerScore4"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="戻る"/>


    </LinearLayout>

    <LinearLayout
        android:visibility = "visible"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id_test">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
</LinearLayout>